@model Curso

@{
    ViewData["Title"] = "Creación de Curso";
    Layout = "Simple";
}
<!--ViewBag y ViewData son dos vistas de la misma información lo que cambia es la manera-->
<!--Con ViewBag podemos mandar elementos extra a los que se encuentra en el modelo-->
<h1>@ViewData["Title"]</h1>

<div asp  asp-validation-summary="All"></div>

<form method="POST">
    <div>   
        <label asp-for="Nombre"></label><!--Pidiendo el nombre del curso-->
        <input asp-for="Nombre" />
    </div>
    <div>
        <label asp-for="Jornada"></label>
        @Html.DropDownList(
            "Jornada",Html.GetEnumSelectList<TiposJornada>(),
            "Seleccione jornada",//Texto por defecto
            new{}
        )
    </div>
    <input type="submit" />
</form>


<p><i>@ViewBag.Fecha</i></p>